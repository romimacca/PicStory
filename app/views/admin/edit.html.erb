<h1>Edit User </h1>
<h4><%= @user.name %> / <%= @user.email %>  </h4>


<%= form_with(model: @user, url: update_user_path ) do |form| %>

  <div class="field-group">
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default"  %>
  </div>
<% end %>
